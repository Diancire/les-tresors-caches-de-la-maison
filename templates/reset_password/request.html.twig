{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <button id="scrollToTopBtn" class="btn-scroll-to-top">
        <i class="fas fa-arrow-up"></i>
    </button>
    <div class="reset_password_container">
        <h1>Réinitialisez votre mot de passe</h1>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrez votre adresse e-mail et nous enverrons un lien pour réinitialiser votre mot de passe. 
                </small>
            </div>

            <button class="btn btn_filled_golden">Envoyer</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
