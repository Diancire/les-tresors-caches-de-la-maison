{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <button id="scrollToTopBtn" class="btn-scroll-to-top">
        <i class="fas fa-arrow-up"></i>
    </button>
    <div class="reset_password_container">
        <h1>Réinitialisez votre mot de passe</h1>

        {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
            <div class="form_container_content-validation-mdp padding-t-25">
                <p>Votre mot de passe doit contenir 8 caractères minimum:</p>
                <ul class="reset_password_list">
                    <li>Une lettre majuscule</li>
                    <li>Une lettre minuscule</li>
                    <li>Un chiffre</li>
                    <li>Un caractère spécial: -+!*$@%_#)</li>
                </ul>
            </div>
            <div class="form_container_content-error">
                {{ form_errors(resetForm.plainPassword) }}
            </div>
            <button class="btn btn_outlined_golden margin-t-25">Réinitialisez le mot de passe</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
