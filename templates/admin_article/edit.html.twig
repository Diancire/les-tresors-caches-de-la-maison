{% extends 'base.html.twig' %}

{% block title %}Dashboard | Modifier l'article{% endblock %}

{% block body %}
    <button id="scrollToTopBtn" class="btn-scroll-to-top">
        <i class="fas fa-arrow-up"></i>
    </button>
    <div class="dashboard_container">
        {{ include('admin/_navbar_dashboard.html.twig') }}
        <div class="dashboard_container_content">
            <h1 class="dashboard_title">Modifier l'article</h1>
                {{ include('admin_article/_form.html.twig', {'button_label': 'Modifier'}) }}
            <div class="dashboard_btn_container">
                <a onclick="return confirm('Voulez-vous supprimer cet article ?')" href="{{path('app_admin_article_delete', {'id': article.id}) }}" class="btn btn_filled_red">
                    Supprimer l'article
                </a>
                <a href="{{ path('app_admin_article_show', {'id': article.id}) }}" class="btn btn_outlined_golden"><i class="fa-solid fa-arrow-left-long"></i>  Retour à la page précédente</a>
            </div>
        </div>

    </div>

{% endblock %}
