{% extends 'base.html.twig' %}

{% block title %}Dashboard | Mon profil{% endblock %}

{% block body %}
<div class="dashboard_container">
    <button id="scrollToTopBtn" class="btn-scroll-to-top">
        <i class="fas fa-arrow-up"></i>
    </button>
    {{ include('admin/_navbar_dashboard.html.twig') }}
    <div class="dashboard_container_content">
        <h1 class="dashboard_title">Mon profil</h1>
        <table class="dashboard_table">
            <tbody class="dashboard_table-tbody">
                <tr>
                    <th>Pseudo</th>
                    <td>{{ user.nickname }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.firstName }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.lastName }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
            </tbody>
        </table>
        <div class="dashboard_btn_container">
            <a href="{{ path('app_admin_edit', {'id': user.id}) }}" class="btn btn_filled_green">Modifier</a>
            {{ include('admin/_delete_form.html.twig') }}
            <a href="{{ path('app_admin_index') }}" class="btn btn_outlined_golden"><i class="fa-solid fa-arrow-left-long"></i>  Retour à la page précédente</a>
        </div>
    </div>
</div>
{% endblock %}

